<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="position"
            type="Integer" />

        <variable
            name="show"
            type="Boolean" />

        <import type="android.view.View" />

        <variable
            name="movie"
            type="com.koaidev.idancesdk.model.Movie" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height='wrap_content'
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cardView4"
            android:layout_width="132dp"
            android:layout_height="65dp"
            android:scaleType="fitXY"
            thumb="@{movie.thumbnailUrl}"
            android:src="@drawable/bg_business"
            app:shapeAppearanceOverlay="@style/Round6dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="132:65"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="@{movie.title, default=ThuVienCuaTui}"
            android:singleLine="true"
            android:textColor="#222222"
            android:textFontWeight="700"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView4"
            app:layout_constraintTop_toTopOf="@+id/cardView4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text='@{"Ngày tham gia: " + movie.release}'
            android:textColor="#666666"
            android:textFontWeight="700"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView4"
            app:layout_constraintTop_toBottomOf="@+id/txt_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>