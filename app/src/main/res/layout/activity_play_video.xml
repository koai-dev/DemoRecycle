<!--            android:visibility="@{hasShowMirror?View.GONE: View.VISIBLE}"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="@id/point_top" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>